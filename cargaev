<div class="resultado" id="resultado"></div>

<script>
function calcular() {
    const bateriaKWh = 44;
    const voltaje = 230;

    const actual = parseFloat(document.getElementById("actual").value);
    const objetivo = parseFloat(document.getElementById("objetivo").value);
    const amperios = parseFloat(document.getElementById("amperios").value);

    if (objetivo <= actual) {
        document.getElementById("resultado").innerText =
            "El porcentaje deseado debe ser mayor que el actual.";
        return;
    }

    const potenciaKW = (voltaje * amperios) / 1000;

    let energiaTotal = 0;

    for (let p = actual; p < objetivo; p++) {
        let factor = 1;

        if (p >= 80 && p < 85) factor = 0.85;
        if (p >= 85) factor = 0.70;

        energiaTotal += (bateriaKWh / 100) / factor;
    }

    const horas = energiaTotal / potenciaKW;

    const ahora = new Date();
    const fin = new Date(ahora.getTime() + horas * 60 * 60 * 1000);

    const opciones = { hour: '2-digit', minute: '2-digit' };
    const horaFin = fin.toLocaleTimeString('es-ES', opciones);

    document.getElementById("resultado").innerText =
        `‚è± Tiempo estimado: ${horas.toFixed(2)} h
üïí Hora aproximada de finalizaci√≥n: ${horaFin}`;
}
</script>

